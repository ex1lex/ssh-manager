{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@widgets": ["./src/widgets"],
      "@widgets/*": ["./src/widgets/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@shared": ["./src/shared"],
      "@shared/*": ["./src/shared/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
